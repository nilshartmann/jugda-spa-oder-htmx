{
  "name": "frontend-htmx",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:tailwind": "tailwindcss -i src/main/frontend-htmx/main.css -o build/resources/main/static/main.css",
    "build:static": "mkdir -p build/resources/main/static/ && rsync -a src/main/resources/static/ build/resources/main/static/",
    "xwatch:tailwind": "tailwindcss -i src/main/frontend-htmx/main.css --watch  -o build/resources/main/static/main.css",
    "watch": "pnpm run --parallel /^watch:.*/",
    "watch:tailwind": "onchange \"src/main/resources/templates/**\" -- pnpm build:tailwind",
    "watch:static": "onchange \"src/main/resources/static/**\" -- pnpm build:static",
    "prettier:check": "prettier --check src/main/frontend-htmx",
    "prettier:write": "prettier --write src/main/frontend-htmx"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "onchange": "^7.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1"
  }
}
